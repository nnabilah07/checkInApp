<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CheckInApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- AppBar & Button Color -->
        <item name="colorPrimary">@color/deep_purple_primary</item>
        <item name="colorPrimaryVariant">@color/indigo_accent</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Optional Accent -->
        <item name="colorSecondary">@color/indigo_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/soft_purple_bg</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorControlActivated">@color/purple_focus</item>

    </style>
</resources>


